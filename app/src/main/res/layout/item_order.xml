<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon / tipe layanan -->
        <ImageView
            android:id="@+id/ivServiceIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_motor_baru"
            android:background="@drawable/bg_circle_green"
            android:padding="4dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvOrderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menuju Lokasi Penjemputan"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvOrderSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Driver: Budi Santoso (B 1234 XYZ)"
                android:textSize="12sp"
                android:textColor="#777777"/>
        </LinearLayout>

        <!-- Tombol kecil "Lacak" / status -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lacak"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:backgroundTint="#FFCC00"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
